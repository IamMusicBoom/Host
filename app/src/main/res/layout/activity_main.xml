<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btn_go_plugin_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="跳转到插件Activity,测试Activity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_go_plugin_activity_for_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="跳转到插件Activity并且需要返回值"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btn_send_broad_cast_receiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="给插件发送广播" />

        <Button
            android:id="@+id/btn_go_service_test_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="去测试服务界面" />

        <Button
            android:id="@+id/btn_go_provider_test_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="去测试ContentProvider的界面" />

        <Button
            android:id="@+id/btn_go_Notification_test_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="去Notification测试的界面" />

        <Button
            android:id="@+id/btn_go_reflex_test_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="去反射测试的界面" />


        <Button
            android:id="@+id/btn_go_plugin_manager_test_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="去测试插件管理界面" />

        <Button
            android:id="@+id/btn_go_test_binder_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="去测试Binder" />


        <Button
            android:id="@+id/btn_go_lock_screen_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="去锁屏界面" />

        <Button
            android:id="@+id/btn_go_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="去下载测试界面" />

        <Button
            android:id="@+id/btn_go_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="去测试贝塞尔曲线" />


        <Button
            android:id="@+id/btn_go_plugin_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="使用插件Fragment" />

        <Button
            android:id="@+id/btn_go_plugin_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="使用插件View" />


        <Button
            android:id="@+id/btn_go_update_plugin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="更新插件" />

        <Button
            android:id="@+id/btn_go_show_float_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="显示悬浮窗口" />

    </LinearLayout>

</ScrollView>