<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ReflexTestActivity">

    <Button
        android:id="@+id/excuse_no_parameter_no_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="调用无参数，无返回值的方法" />

    <Button
        android:id="@+id/excuse_no_parameter_has_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="调用无参数，有返回值的方法" />


    <Button
        android:id="@+id/excuse_parameter_no_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="调用有参数，无返回值的方法" />

    <Button
        android:id="@+id/excuse_parameter_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="调用有参数，有返回值的方法" />

    <Button
        android:id="@+id/excuse_parameters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="调用多参数方法" />

    <Button
        android:id="@+id/get_field_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="获取属性值并且修改属性值" />

    <Button
        android:id="@+id/excuse_static_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="执行静态方法" />


    <Button
        android:id="@+id/get_static_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="获取静态属性值并且修改属性值" />
</LinearLayout>